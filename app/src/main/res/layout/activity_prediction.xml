                android:padding="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <Spinner
        android:id="@+id/itemSpinnerSetBudget"
        android:layout_width="101dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:background="#372776"
        android:entries="@array/items"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.008">

    </Spinner>

    <Button
        android:id="@+id/buttonPredictFood"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"

        android:layout_marginTop="36dp"
        android:text="Show"
        app:layout_constraintBottom_toBottomOf="@+id/itemSpinnerSetBudget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toEndOf="@+id/itemSpinnerSetBudget"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/buttonPredictFoodShow"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:text="Predict"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPredictFood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/buttonPredictFood"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="349dp"
        android:layout_height="424dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="329dp"
            android:layout_height="405dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>